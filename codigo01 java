package main;

import java.util.Scanner;

public class loguin {
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        String emailcorreto = "airtom@gmail.com";
        String senhacorreta = "123455";
        
        int tentativas = 0;
        while (tentativas < 3) {
            System.out.println("Digite o login");
            String Login = scanner.nextLine();  
            System.out.println("--------");
            System.out.println("Digite a Senha");
            String Senha = scanner.nextLine();  
            
            if (emailcorreto.equals(Login) && senhacorreta.equals(Senha)) {
                System.out.println("Login realizado com sucesso");
                return;
            } else {
                tentativas++;
                System.out.println("Login e Senha estão Incorretos");
            }
        }
        System.out.println("Número Máximo de tentativas atingido");
    }
}



